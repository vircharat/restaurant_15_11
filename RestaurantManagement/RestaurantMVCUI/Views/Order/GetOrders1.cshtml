@model IEnumerable<RestaurantEntity.Order>
    @{
        ViewData["Title"] = "ConfirmOrder";
    }

    <h1>ConfirmOrder</h1>
    <div class="row">
        <div class="col-12">
            <h3>Orders</h3>
            <hr />
            <table class="table table-light table-bordered table-hover">
                <thead>
                    <tr>
                        
                        <th>Order Quantity</th>
                        <th>Order OrderTotal</th>
                       
                        <th>Order FoodId</th>
                        <th>Order Date</th>
                        

                  
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                {
                    <a asp-controller="Order" asp-action="ConfirmOrder" class="btn btn-success">Confirm Order</a>
                    <tr>&nbsp;</tr>
                    <a asp-controller="Order" asp-action="ViewOrdered" asp-route-HallId="@item.HallTableId" class="btn btn-success">View Ordered</a>
                    <tr>&nbsp;</tr>
                 
                   
                    <a asp-controller="Order" asp-action="CancelOrder" asp-route-HallId="@item.HallTableId" class="btn btn-danger">Cancel All Order</a>
                    <tr>&nbsp;</tr>
                    



                    break;
                }

